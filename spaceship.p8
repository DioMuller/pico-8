-------------------
-- data
-------------------

-- player
player = {
	x = 0,
	y = 0,
	speed = 0
}

-------------------
-- game lifetime
-------------------
function _init()
	player.x = 64
	player.y = 120
	player.speed = 2
end

function _update()
	update_player()
end

function _draw()
	cls()
	spr(1, player.x, player.y)
end

-------------------
-- helper methods
-------------------
function update_player()
	if btn(0) and player.x > 0 then
		player.x -= player.speed
	end
	
	if btn(1) and player.x < 120 then
		player.x += player.speed
	end
end
